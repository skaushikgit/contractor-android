<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
     <com.accela.contractorcentral.view.FontTextView
			        android:id="@+id/textDateGroup"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        style="@style/FontStyle.SubTitle_Bold"
			        android:gravity="center"
			        android:layout_marginTop="12dp"
			        android:textColor="@color/mid_gray"
			        android:text="Monday, 15th Feb 2015" />
     
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding = "12dp"
    android:background="@drawable/card_background_white"
    android:id="@+id/itemContainer"
    >
 	
	
		     <com.accela.contractorcentral.view.FontTextView
		         	android:id="@+id/textDate"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="5dp"
		            style="@style/FontStyle.SubTitle_Bold"
		            android:text="This Friday" />
			 <com.accela.contractorcentral.view.FontTextView
			        android:id="@+id/textTime"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        style="@style/FontStyle.SubTitle_Bold"
			        android:textColor="@color/mid_gray"
			        android:text="2:00PM ~ 3:00PM" />		     
		   
		
</LinearLayout>
</LinearLayout>

