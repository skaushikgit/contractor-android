<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray" >

    <com.accela.contractorcentral.view.ElasticScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/rootContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" >

            <include layout="@layout/list_header_address" />
        </LinearLayout>
    </com.accela.contractorcentral.view.ElasticScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/card_background_white"
        android:layout_gravity="bottom"
        android:id="@+id/rescheduleInspectionView">

        <Button
            android:id="@+id/buttonRescheduleInspection"
            style="@style/ButtonStyle.Solid_Blue"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:textColor="@drawable/button_text_color"
            android:text="@string/reschedule_inspection"
			 />
    </FrameLayout>

</FrameLayout>