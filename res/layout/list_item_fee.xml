<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="1dp"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_marginTop="5dp"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:src="@drawable/contact" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >       
        <com.accela.contractorcentral.view.FontTextView
            android:id="@+id/textAmountId"
            style="@style/FontStyle.SubTitle_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.accela.contractorcentral.view.FontTextView
            android:id="@+id/textPermitApplicationId"
            style="@style/FontStyle.SubTitle_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permit_application"/>

        <com.accela.contractorcentral.view.FontTextView
            android:id="@+id/textFeeTimeId"
            style="@style/FontStyle.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>