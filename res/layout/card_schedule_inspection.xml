<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_margin="8dp"
    android:padding = "12dp"
    android:id="@+id/inspectionContainer"
    android:background="@drawable/card_background_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
         >
        
		<com.accela.contractorcentral.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontStyle.SubTitle_Bold"
            android:text="@string/Inspection_site" />

    </LinearLayout>
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/detailsLayout" 
     >
	
	    <FrameLayout
	        android:layout_width="match_parent"
	        android:layout_height="1dp" 
	        android:background="#FF000000"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        >
	    </FrameLayout>
	    
	    <com.accela.contractorcentral.view.FontTextView
	         	android:id="@+id/textAddressLine1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            style="@style/FontStyle.SubTitle_Bold"
	            android:text="2342 Camio Ramon" />
	      
		 <com.accela.contractorcentral.view.FontTextView
		        android:id="@+id/textAddressLine2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/FontStyle.Description"
		        android:textColor="#FF000000"
		        android:text="San Ramon, CA 93483" />	
	     
	     
	     <com.accela.contractorcentral.view.FontTextView
	         	android:id="@+id/textInspectionGroup"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            style="@style/FontStyle.SubTitle_Bold"
	            android:text="Electrical" />
	      
		 <com.accela.contractorcentral.view.FontTextView
		        android:id="@+id/textInspectionType"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/FontStyle.Description"
		        android:textColor="#FF000000"
		        android:text="203 Circuit Breaker - Final" />		     

     </LinearLayout>
    
</LinearLayout>

