<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.accela.contractorcentral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_blue" >
    
<LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
 
   
	<View android:layout_width="16dp"
        android:layout_height="match_parent">
	    
	</View>
    <LinearLayout
        android:id="@+id/actionCenterLayoutId"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_marginRight="40dp"
		android:layout_marginLeft="5dp"
		android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.accela.contractorcentral.view.FontTextView
            android:id="@+id/textTitle"
            style="@style/FontStyle.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name" 
            custom:fontType="DINOT-Bold.otf"
            />

        <com.accela.contractorcentral.view.FontTextView
            android:id="@+id/textSmallTitle1"
            style="@style/FontStyle.H6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="@string/app_name"
            android:textColor="#FFFFFFFF" 
            custom:fontType="DINOT-Bold.otf"
            />

        <com.accela.contractorcentral.view.FontTextView
            android:id="@+id/textSmallTitle2"
            style="@style/FontStyle.H6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|top"
            android:text="@string/app_name"
            android:textColor="#FFFFFFFF"
            android:textStyle="normal" 
            android:singleLine="true"
            custom:fontType="DINOT-Regular.otf"
            />
    </LinearLayout>

  

</LinearLayout>
 <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="left|center_vertical"
        android:gravity="left"
        android:scaleType="fitStart"
        android:src="@drawable/btn_back" />
 <Button
        android:id="@+id/buttonRight"
        style="@style/FontStyle.ActionBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="6dp"
        android:gravity="right|center_vertical"
        android:background="@null"
        android:textAllCaps="false"
        android:visibility="gone"/>
</FrameLayout>