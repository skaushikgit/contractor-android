<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/all_inspection_row_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_white"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp" 
            android:orientation="vertical">

            <com.accela.contractorcentral.view.FontTextView
                android:id="@+id/textAddressLine1"
                style="@style/FontStyle.SubTitle_Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="604A Jefferson Ave" >
            </com.accela.contractorcentral.view.FontTextView>

            <com.accela.contractorcentral.view.FontTextView
                android:id="@+id/textAddressLine2"
                style="@style/FontStyle.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="San Francisco, CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageInspectionStatus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/insp_pass" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.accela.contractorcentral.view.FontTextView
                        android:id="@+id/textInspectionStatus"
                        style="@style/FontStyle.SubTitle_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Passed" />

                    <com.accela.contractorcentral.view.FontTextView
                        android:id="@+id/textInspectionType"
                        style="@style/FontStyle.Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Electrical Wiring Final (910)" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>